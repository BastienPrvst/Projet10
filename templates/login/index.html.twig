{% extends 'registration/alt_base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="main-container">
        <h1 class="white white-title">TaskLinker</h1>
            <div class="container-registration">
                <h2 class="white">Se Connecter</h2>

                <form action="{{ path('app_login') }}" method="post">
                    <label class="white"  for="username">Email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required>

                    <label class="white" for="password">Mot de passe </label>
                    <input type="password" id="password" name="_password" required>
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                    <button class="button button-submit" type="submit">Se connecter</button>
                </form>
                <a class="already" href="{{ path('app_registration') }}">Pas de compte ? S'inscrire</a>
            </div>

    </div>

{% endblock %}